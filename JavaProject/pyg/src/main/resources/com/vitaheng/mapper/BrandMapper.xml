<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vitaheng.mapper.BrandMapper">
    <resultMap id="userResultMap" type="Brand">
        <id property="id" column="id"/>
        <result property="firstChar" column="first_char"/>
    </resultMap>
    <select id="queryBrandById" parameterType="Long" resultMap="userResultMap">
        select * from tb_brand where id=#{id}
    </select>
    <select id="queryBrandList" resultMap="userResultMap">
        select * from tb_brand
    </select>
    <insert id="insertBrand" parameterType="Brand">
        insert into tb_brand values(#{id},#{name},#{firstChar})
    </insert>
    <update id="updateBrand" parameterType="Brand">
        update tb_brand set name=#{name},first_char=#{firstChar} where id=#{id}
    </update>
    <delete id="deleteById" parameterType="Long">
        delete from tb_brand where id=#{id}
    </delete>
</mapper>