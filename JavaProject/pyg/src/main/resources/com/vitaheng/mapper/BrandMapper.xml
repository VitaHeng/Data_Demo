<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vitaheng.mapper.BrandMapper">
    <select id="queryBrandById" parameterType="Long" resultType="Brand">
        select * from tb_brand where id=#{id}
    </select>
    <select id="queryBrandList" resultType="Brand">
        select * from tb_brand
    </select>
    <insert id="insertBrand" parameterType="Brand">
        insert into tb_brand values(#{id},#{name},#{first_char})
    </insert>
    <update id="updateBrand" parameterType="Brand">
        update tb_brand set name=#{name},first_char=#{first_char} where id=#{id}
    </update>
    <delete id="deleteById" parameterType="Long">
        delete from tb_brand where id=#{id}
    </delete>
</mapper>