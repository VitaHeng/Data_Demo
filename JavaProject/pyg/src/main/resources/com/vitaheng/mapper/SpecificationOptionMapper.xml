<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vitaheng.mapper.SpecificationOptionMapper">
    <select id="querySpecificationOptionById" parameterType="Long" resultType="SpecificationOption">
        select * from tb_SpecificationOption where id=#{id}
    </select>
    <select id="querySpecificationOptionList" resultType="SpecificationOption">
        select * from tb_SpecificationOption
    </select>
    <insert id="insertSpecificationOption" parameterType="SpecificationOption">
        insert into tb_SpecificationOption values(#{id},#{optionName},#{specId},#{orders})
    </insert>
    <update id="updateSpecificationOption" parameterType="SpecificationOption">
        update tb_SpecificationOption set option_name=#{optionName},spec_id=#{specId},orders=#{orders} where id=#{id}
    </update>
    <delete id="deleteById" parameterType="Long">
        delete from tb_SpecificationOption where id=#{id}
    </delete>
</mapper>